<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="400.0" maxWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aviumauctores.pioneers.controller.ChatController">
    <VBox prefHeight="400.0" prefWidth="600.0">
        <HBox>
            <VBox prefHeight="317.0" prefWidth="379.0">
                <TabPane fx:id="chatTabPane" prefHeight="325.0" prefWidth="369.0" tabClosingPolicy="UNAVAILABLE">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                    <Tab fx:id="allTab" closable="false" text="%all">
                        <ScrollPane fx:id="scrollPane">
                            <VBox fx:id="allChatVBox" />
                        </ScrollPane>
                    </Tab>
                </TabPane>
            </VBox>
            <VBox prefHeight="100.0" prefWidth="222.0">
                <Label fx:id="onlinePlayerLabel" alignment="CENTER" prefHeight="35.0" prefWidth="200.0" text="%online.players" textAlignment="CENTER">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <ListView fx:id="onlinePlayerList" prefHeight="264.0" prefWidth="212.0">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </ListView>
            </VBox>
        </HBox>
        <HBox prefHeight="59.0" prefWidth="600.0">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
            <Label fx:id="hintLabel" text="%delete.hint">
                <HBox.margin>
                    <Insets left="5.0" top="5.0" />
                </HBox.margin>
            </Label>
        </HBox>
        <HBox prefHeight="47.0" prefWidth="600.0">
            <TextField fx:id="chatTextField" prefHeight="35.0" prefWidth="232.0">
                <HBox.margin>
                    <Insets left="5.0" top="5.0" />
                </HBox.margin>
            </TextField>
            <Button fx:id="sendButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="76.0" text="%send">
                <font>
                    <Font size="16.0" />
                </font>
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" top="5.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="leaveButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="76.0" text="%leave">
                <font>
                    <Font size="17.0" />
                </font>
                <HBox.margin>
                    <Insets left="200.0" right="5.0" top="5.0" />
                </HBox.margin>
            </Button>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
        </HBox>
    </VBox>
</Pane>
