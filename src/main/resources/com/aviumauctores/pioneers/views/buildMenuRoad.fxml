<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" styleClass="build-menu" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aviumauctores.pioneers.controller.BuildMenuController">
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <ImageView fitHeight="5" fitWidth="20" pickOnBounds="true" preserveRatio="true">
      <Image url="@buildings/roadImage.png" />
   </ImageView>
   <Label text="%road" />
   <Label text="1">
      <graphic>
         <ImageView fitHeight="21" fitWidth="20" pickOnBounds="true" preserveRatio="true">
            <Image url="@Wood_icon.png" />
         </ImageView>
      </graphic>
   </Label>
   <Label text="1">
      <graphic>
         <ImageView fitHeight="23" fitWidth="24" pickOnBounds="true" preserveRatio="true">
            <Image url="@Bricks_icon.png" />
         </ImageView>
      </graphic>
   </Label>
   <Button fx:id="buildButton" disable="true" mnemonicParsing="false" onAction="#build" text="%build" />
</VBox>
