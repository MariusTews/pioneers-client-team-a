<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" styleClass="build-menu" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aviumauctores.pioneers.controller.BuildMenuController">
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <ImageView fitHeight="32.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@buildings/townImage.png" />
   </ImageView>
   <Label text="%city" />
   <Label text="2">
      <graphic>
         <ImageView fitHeight="27" fitWidth="24" pickOnBounds="true" preserveRatio="true">
            <Image url="@Bread_icon.png" />
         </ImageView>
      </graphic>
   </Label>
   <Label text="3">
      <graphic>
         <ImageView fitHeight="25" fitWidth="25" pickOnBounds="true" preserveRatio="true">
            <Image url="@Metal_icon.png" />
         </ImageView>
      </graphic>
   </Label>
   <Button fx:id="buildButton" mnemonicParsing="false" onAction="#build" text="%build" />
</VBox>
